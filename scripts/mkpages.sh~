#!/bin/sh
#
# mkpages.sh - script to create web pages from a folder (beneath this working directory)
#              containing videos named "public" with subfolders "video" and subtitles "sub"

# Format of videos folder:  has name 

cat public/snips/head.snip > public/index.html

# iterate over videos

for f in `ls public/video/*.mp4`; do

  filename=$(basename $f)
  extension="${filename##*.}"
  fn="${filename%.*}"

  echo "processing video" $fn

  # create thumbnail - grab frame at the 1 minute mark
  avconv -i public/video/$fn.mp4 -ss 00:00:57.000 -vframes 1 public/thumbs/$fn.png 2>/dev/null
  if [ ! -f public/thumbs/$fn.png ] # try 1 second mark
     then 
     avconv -i public/video/$fn.mp4 -ss 00:00:01.000 -vframes 1 public/thumbs/$fn.png 2>/dev/null
  fi
  # final try - give up, use dummy thumbnail image
  if [ ! -f public/thumbs/$fn.png ] # try 1 second mark
     then 
     cp public/img/video-generic.png public/thumbs/$fn.png
  fi


  # 
  # create VTT subtitle files from SRT (transcribed) format
  bash srt2vtt.sh public/sub/$fn.srt
  mv $fn.vtt public/sub/

  # create video page
  sed s/__VIDEONAME__/$fn/g public/snips/play-template.html > public/play$fn.html

  # Add video links to list in public/index.html
  cat >> public/index.html <<EOF

            <div class="col-sm-4">
                <div class="video-post v-col-3 wr-video">
                <img src="thumbs/$fn.png" alt="" class="img-responsive"/>
                <a href="play$fn.html"><span class="vd-button"></span></a>
                <h2>Video: $filename </h2>
                </div>
            </div>
EOF


done

cat public/snips/foot.snip >> public/index.html
